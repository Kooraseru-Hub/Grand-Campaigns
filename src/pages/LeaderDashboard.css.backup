.leader-dashboard {
  min-height: 100vh;
  padding: 100px 20px 40px;
}

.dashboard-container {
  max-width: 1400px;
  margin: 0 auto;
}

.leader-header {
  margin-bottom: 32px;
}

.leader-nation-info {
  display: flex;
  align-items: center;
  gap: 24px;
}

.leader-emblem {
  font-size: 80px;
}

.leader-title {
  font-size: 42px;
  font-weight: 700;
  background: linear-gradient(135deg, #D4AF37, #FFD700);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin: 0 0 8px 0;
  font-family: 'Cinzel', serif;
}

.leader-subtitle {
  font-size: 18px;
  color: rgba(255, 255, 255, 0.7);
  margin: 0;
}

.quick-actions {
  display: flex;
  gap: 16px;
  margin-bottom: 32px;
  flex-wrap: wrap;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
  margin-bottom: 32px;
}

.power-display {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.power-value-large {
  font-size: 48px;
  font-weight: 700;
  color: #D4AF37;
  text-align: center;
}

.power-bar-large {
  height: 12px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6px;
  overflow: hidden;
}

.power-fill-large {
  height: 100%;
  background: linear-gradient(90deg, #D4AF37, #FFD700);
  transition: width 0.3s ease;
}

.stat-display {
  text-align: center;
}

.stat-value-large {
  font-size: 42px;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8px;
}

.stat-label {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.resources-card,
.diplomacy-card,
.military-card {
  margin-bottom: 32px;
}

.card-section-title {
  font-size: 28px;
  font-weight: 700;
  color: #D4AF37;
  margin: 0 0 24px 0;
}

.resources-grid-large {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 24px;
}

.resource-box-large {
  display: flex;
  gap: 20px;
  padding: 24px;
  background: rgba(212, 175, 55, 0.05);
  border: 1px solid rgba(212, 175, 55, 0.2);
  border-radius: 16px;
  transition: all 0.3s ease;
}

.resource-box-large:hover {
  background: rgba(212, 175, 55, 0.08);
  border-color: rgba(212, 175, 55, 0.4);
  transform: translateY(-2px);
}

.resource-icon-xl {
  font-size: 48px;
  flex-shrink: 0;
}

.resource-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.resource-label {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 1px;
}

.resource-amount-large {
  font-size: 32px;
  font-weight: 700;
  color: #D4AF37;
}

.resource-change {
  font-size: 14px;
  font-weight: 600;
}

.resource-change.positive {
  color: #4A7C2C;
}

.resource-change.negative {
  color: #DC143C;
}

.diplomacy-overview {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 32px;
}

.diplomacy-section {
  padding: 24px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16px;
}

.diplomacy-subtitle {
  font-size: 20px;
  font-weight: 700;
  color: #ffffff;
  margin: 0 0 16px 0;
}

.nation-flags {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.flag-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  transition: all 0.3s ease;
  cursor: pointer;
}

.flag-item:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(212, 175, 55, 0.3);
}

.flag-emblem {
  font-size: 28px;
}

.flag-name {
  font-size: 16px;
  font-weight: 600;
  color: #ffffff;
}

.no-data {
  font-size: 15px;
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
  text-align: center;
  padding: 20px;
}

.military-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 20px;
}

.military-unit {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  padding: 24px;
  background: rgba(139, 0, 0, 0.1);
  border: 1px solid rgba(139, 0, 0, 0.3);
  border-radius: 12px;
  transition: all 0.3s ease;
}

.military-unit:hover {
  background: rgba(139, 0, 0, 0.15);
  border-color: rgba(139, 0, 0, 0.5);
  transform: translateY(-4px);
}

.unit-icon {
  font-size: 40px;
}

.unit-name {
  font-size: 16px;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.unit-count {
  font-size: 24px;
  font-weight: 700;
  color: #DC143C;
}

/* Action Forms */
.action-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  font-size: 14px;
  font-weight: 600;
  color: #D4AF37;
}

.form-group input,
.form-group select,
.form-group textarea {
  padding: 12px 16px;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  color: #ffffff;
  font-size: 15px;
  font-family: inherit;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #D4AF37;
  background: rgba(255, 255, 255, 0.08);
}

.form-group textarea {
  resize: vertical;
}

.form-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 8px;
}

.error-message {
  text-align: center;
  padding: 60px 20px;
  color: rgba(255, 255, 255, 0.8);
}

.error-message h2 {
  font-size: 32px;
  font-weight: 700;
  color: #DC143C;
  margin-bottom: 16px;
}

.error-message p {
  font-size: 18px;
  color: rgba(255, 255, 255, 0.6);
}

/* Loading State */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  gap: 20px;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(212, 175, 55, 0.2);
  border-top-color: #D4AF37;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-container p {
  font-size: 18px;
  color: rgba(255, 255, 255, 0.7);
}

/* Access Denied */
.access-denied {
  text-align: center;
  padding: 60px 20px;
  max-width: 600px;
  margin: 0 auto;
}

.access-denied h2 {
  font-size: 32px;
  font-weight: 700;
  color: #FFD700;
  margin-bottom: 16px;
}

.access-denied p {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 12px;
}

/* Responsive */
@media (max-width: 968px) {
  .leader-nation-info {
    flex-direction: column;
    text-align: center;
  }

  .leader-title {
    font-size: 32px;
  }

  .quick-actions {
    flex-direction: column;
  }

  .overview-grid {
    grid-template-columns: 1fr;
  }

  .resources-grid-large {
    grid-template-columns: 1fr;
  }

  .diplomacy-overview {
    grid-template-columns: 1fr;
  }

  .military-grid {
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  }
}

@media (max-width: 768px) {
  .leader-emblem {
    font-size: 60px;
  }

  .leader-title {
    font-size: 28px;
  }

  .form-actions {
    flex-direction: column;
  }
}
